#include <iostream>
using namespace std;
int main() {
    double n,N,D,T,SUM;
    cout<<"Ingrese la cantidad de tÃ©rminos en SUM: ";
    cin>>n;
    SUM = 0.0;
    bool signo = true; 
    for(int i=2; i<=n+1 ; i++) {
        N= i;
        D= i+1;
        T= (signo ? 1 : -1) * (N/D);
        SUM=SUM+T;
        signo= !signo;
    }
cout << "La sumatoria es: ";
    for(int i = 1; i <= n; i++) {
        cout << (i == 1 ? "" : (i % 2 == 1 ? "+" : "-")) << i+1<<"/"<<i+2;
    }
    cout << " = " << SUM << endl;   
    return 0;
}
