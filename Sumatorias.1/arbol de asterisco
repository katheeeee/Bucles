#include <iostream>
using namespace std;
int main() {
    int h;
    cin>>h;
    for(int i = 0; i < h; i++) {
        for(int j = 0; j < h - i - 1; j++) {
            cout << " ";
        }
        for(int k = 0; k <= i; k++) {
            cout << "* ";
        }
        cout << endl;
    }
    for(int i = 0; i < 3; i++) {
        for(int j = 0; j < h - 2; j++) {
            cout << " ";
        }
        cout << "***" << endl;
    }
    return 0;
}
