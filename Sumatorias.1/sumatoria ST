#include <iostream>
#include <cmath>
using namespace std;
long long f(int n) {
    long long r= 1;
    for(int i=2; i<=n; i++) {
        r=r*i;
    }
    return r;
}

int main() {
    int n;
    double x;
    cout<<"Ingrese la cantidad de tÃ©rminos (n): ";
    cin>>n;
    cout<<"Ingrese el valor de x: ";
    cin>>x;
    double ST=0.0;
    for(int i=1; i<=n; i++) {
        ST=ST+pow(x, i) / (double)f(2*i-1);
    }
    cout<<"La sumatoria en ST= " << ST;
    return 0;
}
