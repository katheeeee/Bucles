#include <iostream>
using namespace std;
long long f(int n) {
    long long r=1;
    for(int i=2; i<=n; i++) {
        r=r*i;
    }
    return r;
}

int main() {
    int n;
    cout<<"Ingrese la cantidad de tÃ©rminos: ";
    cin>>n;
    long long SF = 0;
    for(int i=2; i<=n*2; i=i+2) {
        SF=SF+f(i);
    }
    cout << "La sumatoria en SF: ";
    for(int i = 1; i <= n; i++) {
        cout << (i == 1 ? "" : "+") << (2 * i) << "!";
    }
    cout << " = " << SF;


    return 0;
}
